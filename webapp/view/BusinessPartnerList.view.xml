<mvc:View controllerName="com.techedge.training.FlexibleColumnLayoutApp.controller.BusinessPartnerList" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m" xmlns:fb="sap.ui.comp.filterbar">
	<f:DynamicPage>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>businessPartnerListPageTitle} ({data>/businessPartnerList/count})"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="true">
					<SearchField
						search="onSearch"
						width="100%" />
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<List id="idPartnerList"
				class="sapFDynamicPageAlignContent"
				width="auto"
				growing="true"
				growingScrollToLoad="true"
				inset="false"
				updateFinished="onUpdateFinished"
				itemPress="onItemPress"
				items="{
					path: '/BusinessPartnerSet',
					sorter: {
						path: 'CompanyName'
					}
				}">
				<items>
					<StandardListItem
						type="Navigation"
						description="{BusinessPartnerID}"
						title="{CompanyName}"
						info="{Address/City} ({Address/Country})"
					/>
				</items>
			</List>
		</f:content>
	</f:DynamicPage>
</mvc:View>